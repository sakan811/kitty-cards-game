        "koa-static": "^5.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.22.2"
    },
    "devDependencies": {
        "@koa/cors": "^5.0.0",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^16.2.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/koa": "^2.15.0",
        "@types/koa__cors": "^5.0.0",
        "@types/koa-static": "^4.0.4",

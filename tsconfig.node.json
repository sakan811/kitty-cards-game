{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2020"
    },
    "include": ["vite.config.ts", "server/**/*", "src/js/game/**/*", "src/js/utils/**/*"]
} 